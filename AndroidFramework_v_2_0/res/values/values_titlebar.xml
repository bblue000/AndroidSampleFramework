<?xml version="1.0" encoding="utf-8"?>
<!-- 
	all values—— ids, dimens, colors, drawables, styles, i.e.
	for common title bar
 -->
<resources>
    <!-- ids for title bar -->
    <item type="id" name="common_titlebar"/>
    <!-- 第一种形式，即中间显示当前页，两边各有一个预留控制位 -->
    <item type="id" name="common_titlebar_center"/>
    <item type="id" name="common_titlebar_left"/>
    <item type="id" name="common_titlebar_right"/>
    
    
    <!-- dimens for title bar -->
    <dimen name="titlebar_container_hpadding">0dp</dimen>
    <dimen name="titlebar_container_vpadding">0dp</dimen>
    <dimen name="titlebar_height">50dp</dimen>
    <dimen name="titlebar_left_width">50dp</dimen>
    <dimen name="titlebar_left_height">50dp</dimen>
    <dimen name="titlebar_right_width">50dp</dimen>
    <dimen name="titlebar_right_height">50dp</dimen>
    <dimen name="titlebar_side_margin">5dp</dimen>
    <dimen name="titlebar_center_hmargin">5dp</dimen>
    
    <dimen name="titlebar_sides_hpadding">0dp</dimen>
    <dimen name="titlebar_sides_vpadding">0dp</dimen>
    
    <dimen name="titlebar_center_textsize">18sp</dimen>
    <dimen name="titlebar_sides_textsize">14sp</dimen>
    <dimen name="titlebar_sides_drawable_padding">5dp</dimen>
    
    <!-- colors for title bar -->
    <color name="titlebar_center_textcolor">#FFFFFFFF</color>
    <color name="titlebar_sides_textcolor">#FFFFFFFF</color>
    
    <!-- drawables for title bar -->
    <drawable name="titlebar_bg">#FF456789</drawable>
    
    
    <!-- title bar 相关的style -->
    <style name="TitleBar"/>
    <style name="TitleBar.Container">
        <item name="android:id">@id/common_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/titlebar_bg</item>
        <item name="android:paddingLeft">@dimen/titlebar_container_hpadding</item>
        <item name="android:paddingRight">@dimen/titlebar_container_hpadding</item>
        <item name="android:paddingTop">@dimen/titlebar_container_vpadding</item>
        <item name="android:paddingBottom">@dimen/titlebar_container_vpadding</item>
    </style>
    <style name="TitleBar.Text">
        <item name="android:singleLine">true</item>
    </style>
    <style name="TitleBar.ContainerOfCenter">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_toLeftOf">@id/common_titlebar_right</item>
        <item name="android:layout_toRightOf">@id/common_titlebar_left</item>
        <item name="android:layout_marginRight">@dimen/titlebar_center_hmargin</item>
        <item name="android:layout_marginLeft">@dimen/titlebar_center_hmargin</item>
    </style>
    <style name="TitleBar.Text.Center">
        <item name="android:id">@id/common_titlebar_center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/titlebar_center_textsize</item>
        <item name="android:textColor">@color/titlebar_center_textcolor</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TitleBar.Text.Sides">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/titlebar_sides_textsize</item>
        <item name="android:textColor">@color/titlebar_sides_textcolor</item>
        <item name="android:drawablePadding">@dimen/titlebar_sides_drawable_padding</item>
        <item name="android:paddingLeft">@dimen/titlebar_sides_hpadding</item>
        <item name="android:paddingRight">@dimen/titlebar_sides_hpadding</item>
        <item name="android:paddingTop">@dimen/titlebar_sides_vpadding</item>
        <item name="android:paddingBottom">@dimen/titlebar_sides_vpadding</item>
        <item name="android:ellipsize">none</item>
    </style>
    <style name="TitleBar.Text.Sides.Left">
        <item name="android:id">@id/common_titlebar_left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/titlebar_side_margin</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="TitleBar.Text.Sides.Right">
        <item name="android:id">@id/common_titlebar_right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/titlebar_side_margin</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
</resources>