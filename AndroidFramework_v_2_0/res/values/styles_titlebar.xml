<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- title bar 相关的style -->
    <style name="TitleBar"/>
    <style name="TitleBar.Container">
        <item name="android:id">@id/common_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/common_titlebar_bg</item>
        <item name="android:paddingLeft">@dimen/titlebar_container_hpadding</item>
        <item name="android:paddingRight">@dimen/titlebar_container_hpadding</item>
        <item name="android:paddingTop">@dimen/titlebar_container_vpadding</item>
        <item name="android:paddingBottom">@dimen/titlebar_container_vpadding</item>
    </style>
    <style name="TitleBar.Text">
        <item name="android:singleLine">true</item>
    </style>
    <style name="TitleBar.ContainerOfCenter">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_toLeftOf">@id/common_titlebar_right</item>
        <item name="android:layout_toRightOf">@id/common_titlebar_left</item>
        <item name="android:layout_marginRight">@dimen/titlebar_center_hmargin</item>
        <item name="android:layout_marginLeft">@dimen/titlebar_center_hmargin</item>
    </style>
    <style name="TitleBar.Text.Center">
        <item name="android:id">@id/common_titlebar_center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/titlebar_center_textsize</item>
        <item name="android:textColor">@color/titlebar_center_textcolor</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TitleBar.Text.Sides">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/titlebar_sides_textsize</item>
        <item name="android:textColor">@color/titlebar_sides_textcolor</item>
        <item name="android:drawablePadding">@dimen/titlebar_sides_drawable_padding</item>
        <item name="android:ellipsize">none</item>
    </style>
    <style name="TitleBar.Text.Sides.Left">
        <item name="android:id">@id/common_titlebar_left</item>
        <item name="android:layout_width">@dimen/titlebar_left_width</item>
        <item name="android:layout_height">@dimen/titlebar_left_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/titlebar_side_margin</item>
    </style>
    <style name="TitleBar.Text.Sides.Right">
        <item name="android:id">@id/common_titlebar_right</item>
        <item name="android:layout_width">@dimen/titlebar_right_width</item>
        <item name="android:layout_height">@dimen/titlebar_right_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/titlebar_side_margin</item>
    </style>
</resources>